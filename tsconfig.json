{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "target": "ES2015",
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "declaration": false,
        "removeComments": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strict": true,
        "outDir": "./build/",
        "lib": [
            "es6",
            "es7",
            "dom"
        ],
        "baseUrl": "src",
        "paths": {
            "app/*": [
                "./app/*"
            ]
        }
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}